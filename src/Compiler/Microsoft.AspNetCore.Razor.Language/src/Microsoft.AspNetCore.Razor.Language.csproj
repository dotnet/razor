<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Razor is a markup syntax for adding server-side logic to web pages. This package contains the Razor parser and code generation infrastructure.</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- Need to build this project in source build -->
    <ExcludeFromSourceBuild>false</ExcludeFromSourceBuild>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(SharedSourceRoot)\Microsoft.AspNetCore.Razor.Utilities.Shared\**\*.cs" Exclude="$(SharedSourceRoot)\Microsoft.AspNetCore.Razor.Utilities.Shared\Properties\**\*.cs" LinkBase="Shared" />
    <EmbeddedResource Include="$(SharedSourceRoot)\Microsoft.AspNetCore.Razor.Utilities.Shared\Resources\SR.resx" LinkBase="Shared\Resources">
      <GenerateSource>true</GenerateSource>
      <Namespace>Microsoft.AspNetCore.Razor.Utilities.Shared.Resources</Namespace>
    </EmbeddedResource>
    <Using Include="Microsoft.AspNetCore.Razor.Utilities.Shared.Resources" />
    <PackageReference Include="Microsoft.Extensions.ObjectPool" />
    <PackageReference Include="System.Collections.Immutable" />
  </ItemGroup>

</Project>
