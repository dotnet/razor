@page
@using System.Text
@model IndexModel

<div class="text-center">
    @{
        // UTF-8 string literal with lowercase u8 suffix
        ReadOnlySpan<byte> span1 = "hello"u8;
        
        // UTF-8 string literal with uppercase U8 suffix
        ReadOnlySpan<byte> span2 = "world"U8;
        
        // Empty UTF-8 string
        ReadOnlySpan<byte> empty = ""u8;
        
        // UTF-8 string with escape sequences
        ReadOnlySpan<byte> escaped = "hello\nworld"u8;
    }

    @* UTF-8 string in expression *@
    <p>@Encoding.UTF8.GetString("test"u8)</p>
    
    @* UTF-8 string in code block with semicolon *@
    @{
        var bytes = "data"u8;
    }
    
    @* UTF-8 verbatim string *@
    @{
        ReadOnlySpan<byte> verbatim = @"path\to\file"u8;
    }
</div>

@code {
    // UTF-8 string in @code block
    private ReadOnlySpan<byte> GetUtf8Data()
    {
        return "code block data"u8;
    }
    
    private void ProcessUtf8()
    {
        ReadOnlySpan<byte> data = "processing"U8;
        var result = Encoding.UTF8.GetString(data);
    }
}

@functions {
    // UTF-8 string in @functions block
    private ReadOnlySpan<byte> GetFunctionData()
    {
        return "function data"u8;
    }
}
