    <Compile Include="..\Microsoft.VisualStudio.LanguageServices.Razor.Test\Cohost\Shared\*.cs" LinkBase="Endpoints\Shared" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Microsoft.CodeAnalysis.Razor.Workspaces.Test\Shared\**\*.cs">
