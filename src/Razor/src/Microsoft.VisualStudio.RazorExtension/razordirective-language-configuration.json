{
  "comments": {
    "blockComment": [ "@*", "*@" ]
  },
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "@*", "*@" ]
  ],
  "autoCloseBefore": ";:.,=}])>` \r\n\t",
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [ "string", "comment" ]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [ "string", "comment" ]
    },
    {
      "open": "@*",
      "close": "*@",
      "notIn": [ "string" ]
    }
  ]
}